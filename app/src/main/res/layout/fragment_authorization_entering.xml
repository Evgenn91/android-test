<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.entering.AuthorizationEnteringFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="57dp"
            android:layout_marginRight="57dp">


        <TextView
                android:text="Авторизация"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/authorization_title_main"
                android:textSize="34sp"
                android:textColor="@android:color/black"
                app:fontFamily="@font/roboto"/>
        <TextView
                android:text="Выберите способ для входа"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/authorization_subtitle_main"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:fontFamily="@font/roboto"/>
        <Button
                android:text="По номеру договора"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/button_select_contract_entering"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="30dp"
                android:textAllCaps="false"
                app:cornerRadius="15dp"
                android:textSize="16sp"
                app:fontFamily="@font/roboto"/>


        <Button
                android:text="Логин и пароль"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/button_select_login_password_entering"
                android:textAllCaps="false"
                app:cornerRadius="15dp"
                android:textSize="16sp"
                android:backgroundTint="#D9DADA"
                android:textColor="@android:color/black"
                app:fontFamily="@font/roboto"/>
        <Button
                android:text="QR-код"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/button_select_qrcode_entering"
                android:textAllCaps="false"
                app:cornerRadius="15dp"
                android:textSize="16sp"
                android:backgroundTint="#D9DADA"
                android:textColor="@android:color/black"
                app:fontFamily="@font/roboto"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
