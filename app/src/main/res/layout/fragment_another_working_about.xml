<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.working.AnotherWorkingAboutFragment"
        android:clipChildren="false">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                    android:background="@android:color/white"
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="О приложении"
            />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:clipChildren="false">

            <ImageView android:src="@drawable/logo"
                       android:id="@+id/image"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="30dp"/>

            <TextView
                    android:id="@+id/number_date_pledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Версия приложения 1.0"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:padding="5dp"/>

            <TextView
                    android:id="@+id/number_date_pledge1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Контакты"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp"
                    android:padding="5dp"/>

            <TextView
                    android:id="@+id/number_date_pledge2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 800 000 00 00"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:padding="5dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/number_date_pledge3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="О приложении"
                        android:layout_marginTop="30dp"
                        android:textSize="16sp"
                        android:padding="5dp"/>

                <TextView
                        android:id="@+id/number_date_pledge4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Соображения высшего порядка, а также курс на социально-ориентированный национальный проект представляет собой интересный эксперимент проверки соответствующих условий активизации. Равным образом рамки и место обучения кадров представляет собой интересный эксперимент проверки модели развития. Значимость этих проблем настолько очевидна, что реализация намеченного плана развития обеспечивает актуальность системы обучения кадров, соответствующей насущным потребностям?"
                        android:textSize="16sp"
                        android:padding="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>