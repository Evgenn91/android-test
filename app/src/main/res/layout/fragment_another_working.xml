<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.working.AnotherWorkingFragment"
        android:clipChildren="false">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
                android:background="@android:color/white"
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Информация"
        />

    </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:clipChildren="false">


            <LinearLayout
                    android:id="@+id/one_short_pledge"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rectangl"
                    android:elevation="6dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">


                <TextView
                        android:id="@+id/number_date_pledge"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text="Адреса ломбардов"
                        android:textSize="16sp"
                        android:padding="5dp"/>

                <ImageView android:src="@drawable/right_arrow"
                           android:id="@+id/right_arrow"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight = "0"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/one_short_pledge1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rectangl"
                    android:elevation="6dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">


                <TextView
                        android:id="@+id/number_date_pledge1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text="О приложении"
                        android:textSize="16sp"
                        android:padding="5dp"/>

                <ImageView android:src="@drawable/right_arrow"
                           android:id="@+id/right_arrow1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight = "0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>