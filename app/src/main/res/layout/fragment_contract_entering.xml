<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.entering.ContractEnteringFragment"
        android:clipChildren="false">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="57dp"
            android:layout_marginRight="57dp"
            android:clipChildren="false">

        <TextView
                android:text="Авторизация"
                app:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/authorization_title"
                android:layout_marginBottom="10dp"
                android:textSize="34sp"
                android:letterSpacing="0.03"
                android:textColor="@android:color/black"/>
        <TextView
                android:text="Введите номер договора"
                app:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/authorization_subtitle"
                android:textSize="16dp"
                android:letterSpacing="0.02"
                android:textColor="@android:color/black"/>


        <com.google.android.material.textfield.TextInputLayout
                app:fontFamily="@font/roboto"
                android:id="@+id/enter_authorization_contract"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:clipChildren="false"
                app:boxBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                    android:elevation="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="XXXXXX-XXX" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:text="Продолжить"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/button_authorization_contract"
                android:textAllCaps="false"
                app:cornerRadius="15dp"
                android:textSize="16sp"
                android:letterSpacing="0.02"
                app:fontFamily="@font/roboto"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>